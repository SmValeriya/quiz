{
  "name": "gulp-template",
  "version": "1.0.0",
  "description": "Start boilerplate for static markup",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "gulp": "cross-env NODE_ENV=development gulp",
    "build": "cross-env NODE_ENV=production gulp build",
    "pugLint": "glob-exec \"./src/pages/**/*.pug\" -- \"pug-lint {{files.join(' ')}}\"",
    "styleLint": "stylelint \"./src/styles/**/*.pcss\"",
    "styleLintFix": "stylelint \"./src/styles/**/*.pcss\" --fix",
    "eslint": "eslint \"./src/scripts/**/*.js\"",
    "eslintFix": "eslint \"./src/scripts/**/*.js\" --fix",
    "test": "yarn pugLint && yarn styleLint && yarn eslint",
    "postinstall": "husky install"
  },
  "keywords": [
    "gulp",
    "pug",
    "postcss"
  ],
  "author": "Smirnova",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/register": "^7.18.9",
    "babel-loader": "^9.1.0",
    "browser-sync": "^2.27.10",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-if": "^3.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-rewrite": "^5.0.0",
    "gulp-rm": "^2.0.0",
    "husky": "^8.0.2",
    "postcss": "^8.4.19",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-easy-import": "^4.0.0",
    "postcss-inline-svg": "^5.0.0",
    "postcss-rgb": "^1.0.0",
    "precss": "^4.0.0",
    "prettier": "^2.7.1",
    "pug-lint": "^2.6.0",
    "stylelint": "^14.15.0",
    "stylelint-config-standard": "^29.0.0",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.75.0",
    "webpack-stream": "^7.0.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
